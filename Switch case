Expected output no. 1


#include <stdio.h>

int main ()
{
    int num = -6;
    
    printf("Input any integer:");
    scanf("%d", &num);
    
    switch(num < 0)
    {
        // num is negative
        case 1:
            printf("\nThe integer is a negative number");
        break;
        case 2:
            printf("\nThe integer is a positive number");
        break;
        Default:
            printf("\nInvalid");
        break;
    }    
return 0;
}



