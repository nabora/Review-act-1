#include <stdio.h>
int main ()
{
    int num;
    printf("Input any integer:");
    scanf("%d", &num);

    switch(num)
    {
        // num is invalid
        case 1:
            printf("\nThe integer is a negative number");
        break;
        case 2:
            printf("\nThe integer is a positive number");
        break;
         default:
            printf("\nThe inputted value is invalid");
        break;

    }     
return 0;
